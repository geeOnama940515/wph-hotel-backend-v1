# WPH Hotel Booking System - Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database Connection
DB_CONNECTION_STRING=Host=your-neon-host;Database=your-database;Username=your-username;Password=your-password;Ssl Mode=Require;Trust Server Certificate=true

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-with-at-least-256-bits-32-characters-long
JWT_ISSUER=WPHHotelAPI
JWT_AUDIENCE=WPHHotelClient
JWT_EXPIRATION_HOURS=24

# Email Settings
EMAIL_SMTP_HOST=mail.venvi.com
EMAIL_SMTP_PORT=587
EMAIL_FROM_EMAIL=administrator@venvi.com
EMAIL_FROM_NAME=WPH Hotel
EMAIL_USERNAME=administrator@venvi.com
EMAIL_PASSWORD=your-email-password
EMAIL_ENABLE_SSL=true
EMAIL_ENABLE_AUTH=true
EMAIL_BASE_URL=https://wph-hotel.gregdoesdev.xyz

# Hotel Information
HOTEL_NAME=WPH Hotel
HOTEL_ADDRESS=123 Hotel Street, City, Country
HOTEL_PHONE=+1 (555) 123-4567
HOTEL_EMAIL=info@wphhotel.com
HOTEL_WEBSITE=https://wph-hotel.gregdoesdev.xyz
HOTEL_LOGO_URL=https://wph-hotel.gregdoesdev.xyz/ChatGPT%20Image%20Jun%204,%202025,%2002_33_57%20PM.png

# CORS Settings
CORS_ALLOWED_ORIGINS=https://wph-hotel.gregdoesdev.xyz,http://localhost:3000,http://localhost:3001 